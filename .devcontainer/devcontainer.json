{
    "name": "Flutter Dev",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "updateRemoteUserGID": true,
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "Dart-Code.flutter"
            ]
        }
    },
    "postCreateCommand": "flutter doctor -v"
}
